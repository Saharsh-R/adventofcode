{
	"python.analysis.inlayHints.pytestParameters": true,
	"python.testing.pytestEnabled": true,
	"editor.formatOnSave": true,
	"python.formatting.provider": "black",
	"[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
	"files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    }
}
